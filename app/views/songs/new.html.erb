<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br />
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name, list: "artists_autocomplete" %><br />
  <datalist id="artists_autocomplete">
    <% @artists.each do |artist| %>
      <option value="<% artist.name %>">
    <% end %>
  </datalist>
  <%= f.label :genre_id %>
  <%= f.collection_select :genre_id, @genres, :id, :name %><br />
  <input type="text" name='song[note_contents][]' id='song_notes_1'>
  <input type="text" name='song[note_contents][]' id='song_notes_2'>
  <%= f.submit %>
<% end %>


